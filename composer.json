{
  "name": "pantheon-systems/example-wordpress-composer",
  "description": "",
  "type": "project",
  "keywords": [],
  "minimum-stability": "alpha",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "https://github.com/pantheon-systems/wordpress-composer"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cul-it/library-cornell-edu-theme"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cul-it/ares_wordpress"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cul-it/wppp-maintenancemode"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cul-it/wp-libcal-hours"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cul-it/wprssaggregator"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cul-it/draw-attention-pro"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cul-it/facetwp"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cul-it/advanced-custom-fields-pro"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cul-it/elementor-pro"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cul-it/wp-ultimate-csv-importer-pro"
    },
    {
      "type": "vcs",
      "url": "git@github.com:cweagans/composer-patches"
    }
  ],
  "require": {
    "composer/installers": "^1.3.0",
    "cul-it/advanced-custom-fields-pro": "5.8.1",
    "cul-it/ares_wordpress": "1.0.1",
    "cul-it/coming-soon": "5.0.26",
    "cul-it/culu": "1.0.16",
    "cul-it/draw-attention-pro": "1.9.12.1",
    "cul-it/facetwp": "3.4.0.1",
    "cul-it/wp-libcal-hours": "1.0.6",
    "cul-it/wp-rss-aggregator": "4.15.0.2",
    "cul-it/wp-ultimate-csv-importer-pro": "6.0.1.4",
    "cweagans/composer-patches": "~1.0",
    "guzzlehttp/guzzle": "6.3.3",
    "pantheon-systems/quicksilver-pushback": "1.0.1",
    "pantheon-systems/wordpress-composer": "5.2.2",
    "pantheon-systems/wp-saml-auth": "0.6.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "rvtraveller/qs-composer-installer": "1.1",
    "simplesamlphp/simplesamlphp": "1.17.5",
    "vlucas/phpdotenv": "3.3.3",
    "wpackagist-plugin/acf-better-search": "3.3.2",
    "wpackagist-plugin/akismet": "4.1.2",
    "wpackagist-plugin/all-in-one-wp-migration": "7.5",
    "wpackagist-plugin/better-font-awesome": "1.7.1",
    "wpackagist-plugin/classic-editor": "1.5",
    "wpackagist-plugin/code-snippets": "2.13.3",
    "wpackagist-plugin/custom-post-type-ui": "1.6.2",
    "wpackagist-plugin/google-analytics-dashboard-for-wp": "5.3.9",
    "wpackagist-plugin/granular-controls-for-elementor": "1.0.5",
    "wpackagist-plugin/intuitive-custom-post-order": "3.1.2",
    "wpackagist-plugin/json-content-importer": "1.3.4",
    "wpackagist-plugin/kirki": "3.0.44",
    "wpackagist-plugin/pantheon-advanced-page-cache": "0.3.0",
    "wpackagist-plugin/wp-cfm": "1.5.1",
    "wpackagist-plugin/wp-mail-smtp": "1.6.0",
    "wpackagist-plugin/wp-native-php-sessions": "0.8.1",
    "wpackagist-plugin/wp-rss-aggregator": "4.15.1",
    "wpackagist-theme/twentynineteen": "1.4"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "paulgibbs/behat-wordpress-extension": "0.8.0",
    "behat/mink-goutte-driver": "1.2.1",
    "behat/mink-selenium2-driver": "1.3.1",
    "squizlabs/php_codesniffer": "3.4.2",
    "wp-coding-standards/wpcs": "dev-master",
    "phpunit/phpunit": "6.5.14",
    "brain/monkey": "1.5.0"
  },
  "config": {
    "vendor-dir": "vendor",
    "preferred-install": "dist",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "7.3"
    }
  },
  "extra": {
    "wordpress-install-dir": "web/wp",
    "build-env": {
      "install-cms": [
        "wp core install --title={site-name} --url={site-url} --admin_user={account-name} --admin_email={account-mail} --admin_password={account-pass}",
        "wp option update permalink_structure '/%postname%/'"
      ]
    },
    "installer-paths": {
      "web/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/wp-content/themes/{$name}/": ["type:wordpress-theme"],
      "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
    },
    "patches": {
    },
    "enable-patching": true
  },
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "build-assets": [
      "@prepare-for-pantheon",
      "composer install --no-dev --no-ansi --no-interaction --optimize-autoloader --no-progress"
    ],
    "prepare-for-pantheon": "WordPressProject\\composer\\ScriptHandler::prepareForPantheon",
    "cleanup": [
      "./scripts/composer/cleanup-composer"
    ],
    "pre-install-cmd": [
      "rm -f ./vendor/simplesamlphp/simplesamlphp/config/config.php",
      "rm -f ./vendor/simplesamlphp/simplesamlphp/config/authsources.php",
      "rm -f ./vendor/simplesamlphp/simplesamlphp/metadata/saml20-idp-remote.php",
      "rm -f ./vendor/simplesamlphp/simplesamlphp/metadata/shib13-idp-remote.php"
    ],
    "post-install-cmd": [
      "@cleanup",
      "WordPressProject\\composer\\ScriptHandler::createRequiredFiles",
      "ln -s ../../../../private/simplesaml/config/config.php ./vendor/simplesamlphp/simplesamlphp/config/config.php",
      "ln -s ../../../../private/simplesaml/config/authsources.php ./vendor/simplesamlphp/simplesamlphp/config/authsources.php",
      "ln -s ../../../../private/simplesaml/metadata/saml20-idp-remote.php ./vendor/simplesamlphp/simplesamlphp/metadata/saml20-idp-remote.php",
      "ln -s ../../../../private/simplesaml/metadata/shib13-idp-remote.php ./vendor/simplesamlphp/simplesamlphp/metadata/shib13-idp-remote.php"
    ],
    "post-update-cmd": [
      "@cleanup",
      "WordPressProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "post-create-project-cmd": [
      "@cleanup",
      "WordPressProject\\composer\\ScriptHandler::createRequiredFiles"
    ],
    "code-sniff": [
      "./vendor/bin/phpcs --config-set installed_paths ./vendor/wp-coding-standards/wpcs",
      "./vendor/bin/phpcs ./web/wp-content"
    ],
    "unit-test": [
      "./vendor/bin/phpunit tests/unit/*"
    ]
  }
}
