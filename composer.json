  "require-dev": {
    "roave/security-advisories": "dev-master",
    "paulgibbs/behat-wordpress-extension": "0.8.0",
    "behat/mink-goutte-driver": "1.2.1",
    "behat/mink-selenium2-driver": "1.3.1",
